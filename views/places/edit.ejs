<% include ../partials/header %>
<% include ../partials/navbar %>

<div class="main">
    <div class="ui container">
        <h1>Edit <%= place.name %></h1>
            <form class="ui form" action="/places/<%= place._id %>?_method=PUT" method="POST">
                <div class="field">
                    <input type="text" name="place[name]" value="<%= place.name %>">
                </div>
                <div class="field">
                    <input type="text" name="place[image]" value="<%= place.image %>">
                </div>
                <div class="field">
                    <textarea name="place[description]"><%= place.description %></textarea>
                </div>
                <div class="field">
                    <button class="ui button">Submit!</button>
                </div>
            </form>
            <a href="/places">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>
