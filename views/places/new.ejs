    <div class="ui container">
        <h1>Create a New Place</h1>
            <form class="ui form" action="/places" method="POST">
                <div class="field">
                    <input type="text" name="name" placeholder="name">
                </div>
                <div class="field">
                    <input type="text" name="image" placeholder="image url">
                </div>
