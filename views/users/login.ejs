<!DOCTYPE html>
<html>
    <head>
        <!-- Title of the page -->
        <title>Hidden Wonderz</title>

        <!-- Stylesheets -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.css">
        <link href="https://fonts.googleapis.com/css?family=Niconne" rel="stylesheet">
        <link rel="stylesheet" href="/css/form.css">
        <!-- Scripts -->
        <script type="text/javascript" src="/js/jQuery/jquery.min.js"></script>
        <script type="text/javascript" src="/js/semantic/semantic.js"></script>
    </head>
    <body>
    <div style="position: relative; z-index: 2;" class="ui left aligned basic segment">
	    <a class="ui circular icon inverted button" href="/places">
	      <i class="home icon"></i>
	    </a>
	</div>
	<div class="ui container">
		<div class="ui centered grid">
	    	<div class="five wide computer column">
	    		<div id="left-box" class="ui segment">
	    			<div style="text-align: center; color: white;">
	    				<img style="padding-top: 30px;" class="ui tiny centered image" src="https://i.imgur.com/lOdXhuN.png">
	    				<h3>Hidden Wonderz</h3>
	    				<h1 style="font-family: 'Niconne', cursive; font-size: 4rem;">Login</h1>
	    				<h5>Don't have an account?</h5>
	    				<a class="ui blue button" href="/register">SignUp</a>
	    			</div>
	    		</div>
	    	</div>
			<div class="seven wide computer column">
	    		<div id="right-box" class="ui segment">
	    			<div class="form-layout">
						<form style="margin-top: 15%;" class="ui form" action="/login" method="POST">
							<div class="field">
							  <label>Username</label>
							  <input type="text" name="username" placeholder="username">
							</div>
						    <div class="field">
						    <label>Password</label>
						    <input type="password" name="password" placeholder="password">
							</div>
							<div style="display: inline-block;">
								<button class="ui inverted green button" type="submit">Submit</button>
								<a class="ui inverted red button" href="/forgot">Forgot Password</a>
							</div>
						</form>
					</div>
	    		</div>
			</div>
		</div>
	</div>
	<ul class="bg-form">
		<li></li>
	</ul>
	<script>
		$('form').form({
	    inline : true,
	    on: 'blur',
	    fields: {
	      username: {
	        identifier: 'username',
	        rules: [{
	          type: 'empty',
	          prompt: 'Please enter a username'
	        }]
	      },
	      password: {
	        identifier: 'password',
	        rules: [{
	          type: 'empty',
	          prompt: 'Please enter a password'
	        }]
	      }
	    }
	  });
	</script>
</body>
</html>
